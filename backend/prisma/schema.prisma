generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  email String @unique
  password String
  stories Story[]
  createdAt DateTime @default(now())
}

model Story {
  id String @id @default(uuid())
  userId String

  categories String[]

  situation String
  action String
  result String
  title String

  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
